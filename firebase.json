{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "client/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/fetchDatabaseKeys",
        "function": "fetchDatabaseKeys"
      },
      {
        "source": "/fetchIds",
        "function": "fetchIds"
      },
      {
        "source": "/fetchData",
        "function": "fetchData"
      },
      {
        "source": "/downloadExcel",
        "function": "downloadExcel"
      },
      {
        "source": "/home",
        "destination": "/index.html"
      },
      {
        "source": "/login",
        "destination": "/index.html"
      },
      {
        "source": "/create",
        "destination": "/index.html"
      }
    ]
  }
}